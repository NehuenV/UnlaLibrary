@using UnlaLibrary.UI.Web.Helper;
<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>UNLa Library | Inicio</title>
    <link rel="icon" href="/images/icono.png" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@100;300;400;500;700&display=swap"
          rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Anton&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link href="@Url.Content("~/css/common.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="page_container bg-light">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid w-75r">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <img class="logo" src="/images/logo.png" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText"
                        aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarText">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="@Url.Action("Index", "Home")">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="@Url.Action("Catalogo","Catalogo")">Catalogo</a>
                        </li>
                        @if (SessionHelper.GetValue(User, "TipoDeUsuarioId") == "2")
                        {
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="@Url.Action("SubirMaterial","Profesores")">Cargar Material</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="@Url.Action("AlumnoMateria","Profesores")">Gestionar Alumnos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="@Url.Action("MaterialSubido","Profesores")">Mis aportes</a>
                            </li>
                        }
                        @if (SessionHelper.GetValue(User, "TipoDeUsuarioId") == "1")
                        {
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="@Url.Action("Biblioteca","Biblioteca")">Mi Biblioteca</a>
                            </li>
                        }
                        @if (SessionHelper.GetValue(User, "TipoDeUsuarioId") == "3")
                        {
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="@Url.Action("Index","Universidad")">Universidades</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="@Url.Action("Index","Carrera")">Carreras</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="@Url.Action("Index","Materia")">Materias</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="@Url.Action("Index","Usuario")">Usuarios</a>
                            </li>
                        }
                    </ul>
                    <div class="btn-group">
                        <button class="btn btn-outline-light me-2 rounded" type="button" data-bs-toggle="dropdown"
                                aria-expanded="false" id="session">
                            @User.Identity.Name
                        </button>
                        <ul class="dropdown-menu dropdown-menu-dark">
                            <li><a class="dropdown-item" href="@Url.Action("Index", "Cuenta")">Mi Cuenta</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Logout", "Home")">Salir</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
        @RenderBody()
    </div>
    <footer class="bg-dark text-white p-3 d-flex justify-content-center">
        Datos del footer por acá
    </footer>
    <script src="https://kit.fontawesome.com/a83f82191e.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
