@model IEnumerable<UnlaLibrary.Data.Entities.Usuario>
@{
    Layout = "~/Views/Shared/_LayoutLogOn.cshtml";
    ViewData["Title"] = "Usuarios";
}

@section scripts{
    <script>
        function prepararEliminacion(id) {
            // para cuando arregle el modal
        }
    </script>
}

<!DOCTYPE html>
<html lang="es">

<head>

</head>

<body>

    <div class="w-100 d-flex justify-content-center pb-3">
        <div class="w-75r d-flex flex-column align-items-center">
            <h2 class="display-5 my-3">Usuario</h2>
            <a class="btn btn-primary btn-lg m-3" href="/Usuario/Create">Agregar</a>
            <a class="btn btn-primary m-3" href="/Usuario/Academica">Gestionar información académica</a>
            <div class="table-responsive w-100">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Nombre</th>
                            <th scope="col">Apellido</th>
                            <th scope="col">Dni</th>
                            <th scope="col">Email</th>
                            <th scope="col">TipoUsuario</th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td scope="row">@item.Nombre</td>
                                <td scope="row">@item.Apellido</td>
                                <td scope="row">@item.Dni</td>
                                <td scope="row">@item.Email</td>
                                <td scope="row">@item.IdTipoUsuarioNavigation.NombreTipoUsuario</td>
                                <td scope="row">
                                    <a href="/Usuario/Edit/@item.IdUsuario" class="btn btn-sm btn-primary">Editar</a>
                                </td>
                                <td scope="row">
                                    <form asp-controller="Usuario" asp-action="Delete" method="post">
                                        <input type="number" class="d-none" name="id" value="@item.IdUsuario" />
                                        <button class="btn btn-danger btn-sm" type="submit">
                                            Eliminar
                                        </button>
                                    </form>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</body>
</html>