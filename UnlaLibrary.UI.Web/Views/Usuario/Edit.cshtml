@model UnlaLibrary.Data.Entities.Usuario
@{
    Layout = "~/Views/Shared/_LayoutLogOn.cshtml";
    ViewData["Title"] = "Usuario";
}

@section scripts{
    <script>
        const togglePassword = document.querySelector('#togglePassword');
        const password = document.querySelector('#password');
        togglePassword.addEventListener('click', function (e) {
            const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
            password.setAttribute('type', type);
            this.classList.toggle('fa-eye')
        });
    </script>
}

<!DOCTYPE html>
<html lang="es">

<head>
    <link href="@Url.Content("~/css/home_user.css")" rel="stylesheet" type="text/css" />
    <style>
        #togglePassword {
            margin-left: -30px;
            cursor: pointer;
        }
    </style>
</head>

<body>

    <div class="w-100 d-flex justify-content-center pb-3">
        <div class="w-75r d-flex flex-column align-items-center">
            <h2 class="display-5 my-3">USUARIO</h2>
            <h6 class="my-3">EDITAR USUARIO</h6>
            <form class="my-4 d-flex flex-column justify-content-center align-items-start w-50r border border-secondary rounded p-3"
                  asp-controller="Usuario" asp-action="Edit" method="post">
                <input type="number" class="d-none" asp-for="IdUsuario" value="@Model.IdUsuario" />
                <div class="w-100">
                    <label for="archivo" class="form-label">Nombre</label>
                    <input type="text" maxlength="60" mixlength="3" class="form-control mb-2" placeholder="Nombre" asp-for="Nombre"
                           value="@Model.Nombre" required />
                </div>

                <div class="w-100">
                    <label for="archivo" class="form-label">Apellido</label>
                    <input type="text" maxlength="60" mixlength="3" class="form-control mb-2" placeholder="Apellido "
                           asp-for="Apellido" value="@Model.Apellido" required />
                </div>

                <div class="w-100">
                    <label for="archivo" class="form-label">Dni</label>
                    <input type="text" maxlength="60" mixlength="3" class="form-control mb-2" placeholder="Dni "
                           asp-for="Dni" value="@Model.Dni" required />
                </div>

                <div class="w-100">
                    <label for="archivo" class="form-label">Email</label>
                    <input type="text" maxlength="60" mixlength="3" class="form-control mb-2" placeholder="Email "
                           asp-for="Email" value="@Model.Email" required />
                </div>
                <div class="w-100">
                    <label for="archivo" class="form-label">Clave</label>
                    <div class="w-100 d-flex align-items-center">
                        <input type="password" maxlength="60" mixlength="3" class="form-control mb-2" placeholder="Clave "
                               asp-for="Clave" value="@Model.Clave" required id="password" />
                        <i class="fas fa-eye-slash" id="togglePassword"></i>
                    </div>
                </div>

                <div class="w-100">
                    <label for="archivo" class="form-label">TipoUsuario</label>
                    <select class="form-select my-2" asp-for="IdTipoUsuario" asp-items="@(new SelectList(ViewBag.Tipos,"IdTipoUsuario","NombreTipoUsuario") )">
                    </select>
                </div>


                <div class="w-100 d-flex justify-content-center m-2">
                    <button class="btn btn-primary" type="submit">Guardar</button>
                    <a href="javascript:history.back()" class="btn btn-secondary mx-2">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>